@using MudBlazor
@inherits LayoutComponentBase

<MudThemeProvider />
<MudDialogProvider />
<MudSnackbarProvider />

<MudLayout>
    <MudAppBar Elevation="1">
        <MudIconButton Icon="@Icons.Material.Filled.Menu" Color="Color.Inherit" Edge="Edge.Start"
            OnClick="@((e) => DrawerToggle())" />
        <MudSpacer />
        <MudIconButton Icon="@Icons.Material.Filled.MoreVert" Color="Color.Inherit" Edge="Edge.End" />
    </MudAppBar>
    <MudDrawer @bind-Open="_drawerOpen" Elevation="2">
        
        <MudNavMenu>
            <div class="my-4">

                <MudText Typo="Typo.h5" Class="px-4">LLM RAG Agent Knowledgebase</MudText>
                <MudText Typo="Typo.body1" Class="px-4 mud-text-secondary">Search and chat with documents in local computer</MudText>
                <MudText Typo="Typo.caption" Class="px-4 mud-text-secondary">Version 0.1</MudText>
                <MudIconButton Icon="@Icons.Material.Filled.BrowserUpdated" aria-label="update" Size="Size.Small"></MudIconButton>

            </div>
            <MudDivider Class="mt-2" />

            <MudNavLink Icon="@Icons.Material.Filled.Home" Href="/" Match="NavLinkMatch.All">Home</MudNavLink>
            <MudNavLink Icon="@Icons.Material.Filled.Work" Href="/pesquisa" Match="NavLinkMatch.All">Search</MudNavLink>
            <MudNavLink Icon="@Icons.Material.Filled.Work" Href="/chat" Match="NavLinkMatch.All">Chat</MudNavLink>
        </MudNavMenu>


    </MudDrawer>
    <MudMainContent>
        <MudContainer MaxWidth="MaxWidth.Large" Class="pt-8">
            @Body
        </MudContainer>
    </MudMainContent>
</MudLayout>

@code {
    bool _drawerOpen = true;

    void DrawerToggle()
    {
        _drawerOpen = !_drawerOpen;
    }
}